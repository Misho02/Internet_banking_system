@model Customer

@{
    ViewData["Title"] = "Customer - Create";
}
<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label" asp-for="CustomerName"></label>
        <input class="form-control" asp-for="CustomerName">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="CustomerSurname"></label>
        <input class="form-control" asp-for="CustomerSurname">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="CustomerPhone"></label>
        <input class="form-control" asp-for="CustomerPhone">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="CustomerEmail"></label>
        <input class="form-control" asp-for="CustomerEmail">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="CustomerAdress"></label>
        <input class="form-control" asp-for="CustomerAdress">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>